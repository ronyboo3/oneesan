<div class="rss">
  <div id="rss-matome" class="rss-title" style="background-color:#<%=@category_color%>;">
    <a><%=@category_name%> : 最新記事</a>
  </div>
  <div class="rss_list">
    <%- @articles.each do |article|  -%>
      <div class="article">
        <div class="article-title"><img src="<%=article["img"] == nil ? "/images/logo.png" : article["img"]%>"></div>
        <div class="article-description"><a href="<%=article["url"]%>" target="_blank" onclick="ga('send', 'event', 'rss_list_<%=@category_name%>', 'click');"><%= article["title"] %></a></div>
      </div>
    <%- end -%>
  </div>
</div>
